<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/medicine"
    android:paddingBottom="30dp"
    tools:context=".MedicineFragment">

    <!-- TODO: Update blank fragment layout -->


    <Button
        android:id="@+id/btnPDF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:backgroundTint="@color/blue"
        android:paddingTop="20dp"
        android:text="انقر لعرضPDF  "
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="200dp"
        android:text="يعتبر تخصص الطب واحداً من التخصصات التي تشهد إقبالاً كبيراً ومتزايداً يوماً بعد يوم، حيث تخرّج الجامعات في شتى أنحاء العالم سنوياً آلافاً من الأطباء الذين يكرّسون حياتهم في العمل على تقديم الرعاية الطبية اللازمة وتشخيص وعلاج الأمراض المختلفة التى تصيب جسم الانسان وهذا ما يجعله واحدًا من انبل التخصصات وأكثرها انسانية"
        android:textColor="#F3EFEF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="90dp"
        android:paddingEnd="20dp"
        android:text="ودراسة الطب تنقسم بالعاده الى/ السنة التحضيرية ، السنة الثانيه و الثالثه ، السنة الرابعة والخامسة (السنوات الإكلينيكية) و أخيراً سنة الامتياز"
        android:textColor="#F3EEEE"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="300dp"
        android:text="ويجب على طالب الطب ان يتمتع بالصبر والقدره على البحث العلمي وان لا يتردد"
        android:textColor="#F3EFEF"
        android:textSize="20sp" />
</FrameLayout>